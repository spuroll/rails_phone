<%= render 'layouts/header' %>

<h1>Call History</h1>

<div class = "floating-table">
<table class="table table-striped">
  <th>Origin Number</th>
  <th>Duration</th>
  <th>Note</th>
  <% @calls.each do |call| %>
    <tr>
      <td><%= call.number %></td>
      <td><%= call.duration %> seconds</td>
      <td><%= call.note %></td>
    </tr>
  <% end %>

</table>
</div>